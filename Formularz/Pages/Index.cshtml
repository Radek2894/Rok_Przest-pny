@page
@model IndexModel

@{
    ViewData["Title"] = "Home page";
}


<div>
    
    <h1 class="display-4 text-sm-left">Welcome @Model.Name</h1>
    <form method="post" class="row">

         <label class="col-9 " asp-for="FizzBuzz.Name"></label>

        <input class="col-12" asp-for="FizzBuzz.Name" />

        <label class="col-9 " asp-for="FizzBuzz.Number"></label>

        <input class="col-12" asp-for="FizzBuzz.Number" />


        <button class="col-1 btn" type="submit">Zatwierdź</button>
        @if(Model.FizzBuzz.doesNumberExists())
            {
          <span asp-validation-for="FizzBuzz.Number" class="text-error"> </span>
            }

    </form>

</div>


